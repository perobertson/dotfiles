# cd
alias ..='cd ..'

# ls
if [[ $OSTYPE = darwin* ]]; then
  alias ls="ls -GF"
else
  alias ls="ls -F --color=auto"
fi
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias borg='git'
alias gf='git fetch'
alias gfa='git fetch --all --prune'

alias gl='git pull --rebase --stat'

alias ga='git add'

alias gp='git push'

alias gd='git diff'
alias gdc='git diff --cached'

alias gc='git commit -m'
alias gca='git commit -a'

alias gco='git checkout'
alias gcd='git checkout develop'
alias gcb='git checkout -b'

alias gb='git branch'

alias gs='git status'
alias gss='git status --short'

alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

alias gloga='git log --graph --decorate --oneline --color --all'
alias glogd='git log --graph --decorate $(git rev-list -g --all)'

alias grb='git rebase'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grbi='git rebase -i'

# rails
alias rc='rails console'
alias rs='rails server -b 0.0.0.0'
alias rg='rails generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate'
alias rst='touch tmp/restart.txt'
alias b='bundle exec'
alias nrake="noglob rake"
alias rfind='find . -name "*.rb" | xargs grep -n'  # Find ruby file

# docker
alias dc='docker-compose'
alias dcr='docker-compose run'

# other
alias rsync="rsync --progress"
alias rt="ruby -Itest"
alias zt="zeus tests"
alias tmux="TERM=screen-256color-bce tmux -2"

which dnf > /dev/null
if [[ $? -eq 0 ]]; then
  alias ds='dnf search'
  alias dp='dnf info'
  alias di='sudo dnf install'
  alias du='sudo dnf update'
  alias dr='sudo dnf remove'
  alias dgi='sudo dnf groupinstall'
  alias dgr='sudo dnf groupremove'
fi

# commands starting with % for pasting from web
alias %=' '

# todo
export TODOTXT_DEFAULT_ACTION=ls
export TODOTXT_SORT_COMMAND='env LC_COLLATE=C sort -k 2,2 -k 1,1n'
alias t='todo.sh -c -d ~/Dropbox/todo/todo.cfg'
