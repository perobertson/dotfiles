[alias]
	co = checkout
	la = config --includes --get-regexp alias
	standup = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --since=yesterday --date=relative
[apply]
	whitespace = nowarn
[color]
	diff = auto
	status = auto
	branch = auto
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
	editor = vim
	autocrlf = input
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[merge]
	tool = vimdiff3
[pager]
	branch = false
	config = false
[push]
	default = simple
[tag]
	gpgSign = true
